# Setting browser & term variables here because they're also used in keymap.conf
## Your preferred Web Browser
set $browser firefox

## Your preferred terminal emulator
set $term alacritty

# Read `man 5 sway` for a complete reference.
include /etc/sway/config.d/*
include ./keymap.conf

# Ensure ZDOTDIR is properly set
exec export ZDOTDIR=$HOME/.config/zsh

title_align center

gaps inner 5
smart_gaps on

# Activate smart borders (only when there are effectively no gaps)
smart_borders no_gaps

# Sets appearance for focused windows
client.unfocused #666666 #444444 #FFFFFF #239EF4 #444444
client.focused #CCCCCC #EEEEEE #000000 #2E9EF4 #EEEEEE

# Set the font
font Cantarell Bold 11

# Stop mousing over a window from automatically focusing it
focus_follows_mouse no

### Output configuration
output DP-3 {
  mode 1920x1080@143.996Hz
}
output * bg $HOME/Pictures/Wallpapers/orchis.jpg fill

### Idle configuration
set $lock swaylock --clock --indicator --screenshots --effect-scale 0.4 --effect-vignette 0.2:0.5 --effect-blur 4x2 --datestr "%a %B %d %Y" --timestr "%H:%M" 
exec swayidle -w \
  timeout 600 $lock \
  timeout 570 'swaymsg "output * dpms off"' \
  resume 'swaymsg "output * dpms on"' \
  before-sleep $lock

# Start notification service
exec mako

# Polkit authentication is necessary for logging in as root in apps.
exec lxpolkit

# Start FCITX to ensure we have an IME
exec fcitx5 -d

#Start startup programs
workspace 2
exec $term
workspace 1
exec $browser

# Read `man 5 sway-input` for more information about this section.

input "type:keyboard" {
    xkb_numlock enabled
}

input "type:mouse" {
    accel_profile "adaptive"
    pointer_accel -1
}


# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top

    swaybar_command waybar

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%Y-%m-%d %I:%M:%S %p'; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}
